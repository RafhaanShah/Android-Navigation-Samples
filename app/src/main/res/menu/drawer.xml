<!-- Your menu ids must match your nav graph ids -->
<!-- checkableBehavior must be single for top level destinations -->
<menu xmlns:android="http://schemas.android.com/apk/res/android">
    <group
        android:id="@+id/drawer_menu_top"
        android:checkableBehavior="single">
        <!-- Set the starting destination to checked -->
        <item
            android:id="@+id/home"
            android:checked="true"
            android:contentDescription="@string/cd_home"
            android:icon="@drawable/ic_home"
            android:title="@string/title_home" />
        <item
            android:id="@+id/list"
            android:contentDescription="@string/cd_list"
            android:icon="@drawable/ic_list"
            android:title="@string/title_list" />
        <item
            android:id="@+id/form"
            android:contentDescription="@string/cd_form"
            android:icon="@drawable/ic_feedback"
            android:title="@string/title_register" />
    </group>

    <group
        android:id="@+id/drawer_menu_bottom"
        android:checkableBehavior="none">
        <item
            android:id="@+id/settings"
            android:contentDescription="@string/cd_settings"
            android:icon="@drawable/ic_settings"
            android:title="@string/title_settings" />
    </group>
</menu>
